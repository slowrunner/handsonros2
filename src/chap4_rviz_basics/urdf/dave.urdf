<?xml version='1.0'?>

<!-- FILE: dave.urdf -->

<!-- maintainer: slowrunner@users.noreply.github.com -->

<!-- GoPiGo3 as a 220mm long,  104mm wide, 70mm high enclosing box (blue) -->
<!--   with a 3/4 inch castor holding the chassis level (blue) -->
<!--   with 65mm dia 25mm wide wheels (black) spaced 116mm (Wheel base) apart -->
<!--   The wheels are 20mm forward of the chassis center -->
<!--   DI Distance Sensor is 75mm in front of wheels or 95mm in front of bot center -->
<robot name="dave">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.072" rpy="0 0 0" />
      <geometry>
          <box size="0.22 0.104 0.052"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0.5 1 0.5"/>
      </material>
    </visual>

    <!-- Caster -->
    <visual name="caster">
      <origin xyz="-0.1 0 0.01" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.01" />
      </geometry>
    </visual>

    <!-- Caster Support -->
    <visual name="castor_support">
      <origin xyz="-0.1 0.0 0.032" rpy="0 0 0" />
      <geometry>
        <box size="0.025 0.055 0.026" />
      </geometry>
      <material name="blue"/>
    </visual>
    
    <!-- Servo 1 Body -->
    <visual>
        <origin xyz="0.100 0.010 0.1125" rpy="0 0 0" />
        <geometry>
          <box size="0.020 0.040 0.025" />
        </geometry>
        <material name="blue" />
    </visual>

    <!-- Level 2 to 3 -->
    <visual>
        <origin xyz="0.0175 0 0.121" rpy="0 0 0" />
        <geometry>
          <box size="0.125 0.104 0.050" />
        </geometry>
        <material name="blue" />
    </visual>

    <!-- Level 3 to 4 -->
    <visual>
        <origin xyz="0.0175 0 0.185" rpy="0 0 0" />
        <geometry>
          <box size="0.125 0.104 0.075" />
        </geometry>
        <material name="clear" >
          <color rgba="0.8 0.8 0.8 0.1" />
        </material>
    </visual>

  </link>


  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.025" radius="0.0325" />
      </geometry>
      <material name="black">
        <color rgba="0.05 0.05 0.05 0.5"/>
      </material>
    </visual>
  </link>

  <joint name="joint_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.020 -0.058 0.0325" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.025" radius="0.0325" />
      </geometry>
      <material name="black"/>
    </visual>
  </link>
  
  <joint name="joint_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.020 0.058 0.0325" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

  <!-- DI ToF Distance Sensor -->
  <link name="distance_sensor">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.002 0.035 0.023" />
      </geometry>
      <material name="red" >
        <color rgba="1.0 0.0 0.0 0.5" />
      </material>
    </visual>
  </link>

  <joint name="joint_distance_sensor" type="revolute" >
    <parent link="base_link" />
    <child link="distance_sensor" />
    <origin xyz="0.11 0.0 0.140" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <limit effort="30" velocity="1.0" lower="-0.785398163394" upper="0.785398163394" />
  </joint>

  <!-- LIDAR -->
  <link name="laser_frame">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <cylinder length="0.020" radius="0.0325" />
      </geometry>
      <material name="blue" >
        <color rgba="0 0 1 0.85" />
      </material>
    </visual>
  </link>
  
  <joint name="joint_ydlidar" type="fixed">
    <parent link="base_link"/>
    <child link="laser_frame"/>
    <origin xyz="0 0 0.200" rpy="0 0 0" /> 
  </joint>
  

</robot>
